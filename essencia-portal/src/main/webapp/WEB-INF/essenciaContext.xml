<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="applicationContext.xml"/>

    <bean id="localFileStorage" class="org.uengine.modeling.resource.LocalFileStorage">
        <property name="localBasePath" value="E:\\essencia"/>
    </bean>

    <bean class="org.uengine.modeling.resource.ResourceManager" scope="singleton">
        <property name="storage" ref="localFileStorage"/>
    </bean>
</beans>