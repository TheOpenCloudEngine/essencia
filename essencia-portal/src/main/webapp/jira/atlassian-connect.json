{
  "name": "Essencia Jira",
  "description": "Essencia Atlassian Connect add-on",
  "key": "essencia-jira",
  "vendor": {
    "name": "uEngine, Inc.",
    "url": "http://localhost:9090"
  },
  "baseUrl": "http://localhost:9090",
  "scopes": [
    "READ", "WRITE","DELETE","PROJECT_ADMIN","ADMIN"
  ],
  "links": {
    "self": "http://localhost:9090/atlassian-connect.json",
    "homepage": "http://localhost:9090/atlassian-connect.json"
  },
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    "installed": "/api/handshake/installed",
    "uninstalled": "/api/handshake/uninstalled",
    "enabled": "/api/handshake/enabled",
    "disabled": "/api/handshake/disabled"
  },
  "apiVersion": 1,
  "modules": {
    "webhooks": [
      {
        "event": "jira:issue_updated",
        "url": "/api/issue/updated"
      }
    ],
    "generalPages": [
      {
        "key": "essencia-index",
        "location": "system.top.navigation.bar",
        "name": {
          "value": "Essencia"
        },
        "url": "/api/view/index"
      }
    ],
    "postInstallPage": {
      "url": "/api/view/index",
      "key": "essencia-postinstall",
      "name": {
        "value": "Essencia"
      }
    },
    "jiraProjectTabPanels": [
      {
        "url": "/api/view/process-monitor",
        "weight": 100,
        "key": "process-monitor",
        "name": {
          "value": "Process Monitor"
        }
      },
      {
        "url": "/api/view/alpha-view",
        "weight": 100,
        "key": "alpha-view",
        "name": {
          "value": "Alpha View"
        }
      }
    ],
    "webPanels": [
      {
        "url": "/api/view/activityCard",
        "location": "atl.jira.view.issue.left.context",
        "layout": {
          "width": "100%",
          "height": "100%"
        },
        "weight": 1,
        "key": "my-web-panel",
        "name": {
          "value": "Activity Card"
        }
      }
    ]
  }
}