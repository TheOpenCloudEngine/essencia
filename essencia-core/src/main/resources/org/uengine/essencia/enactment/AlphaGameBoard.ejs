<%var alpha = value.alpha;%>

<li> <%=alpha.name%>
<%var alphaInstanceList = value.alphaInstances[alpha.name];%>
    <table class="table table-striped active">
        <tr>
            <td>Id</td>
        <%
         for(var i in alpha.states){
            var state = alpha.states[i];
             %><td><%=state.name%></td><%
         }
        %>
        </tr>


        <%

        for(var i in alphaInstanceList){
            var alphaInstance = alphaInstanceList[i];

            if(alphaInstance && alphaInstance.alphaInstance){
                alphaInstance = alphaInstance.alphaInstance;
            }

            %><tr><td><%=alphaInstance.id%></td><%

            for(var j in alpha.states){

                var state = alpha.states[j];

                if(alphaInstance.currentStateName == state.name){
                    %><td><div class="icon-rounded m-r-10 current tooltip-top"><i class="glyphicon glyphicon-ok workitem_btn current"></i></div><%
                }else{
                    %><td><%
                }

                if(alphaInstance.subAlphaInstanceCount>1){
                    var stateDetails = alphaInstance.stateDetailsByStateName[state.name];
                    if(stateDetails){

                        %>(<%=stateDetails['WIPCount']%>/<%=alphaInstance.subAlphaInstanceCount%>)<%
                    }
                }

                %></td><%
            }

            %></tr><%
        }
        %>
    </table>


    <%

    if(alpha.childElements){

    %><ul><%
        for(var i in alpha.childElements){
            var childAlpha = alpha.childElements[i];

            var childGameBoard = {
                __className: "org.uengine.essencia.enactment.AlphaGameBoard",
                alphaInstances:  value.alphaInstances,
                alpha: childAlpha
            };

            %><%=mw3.locateObject(childGameBoard)%><%

        }


        %></ul><%
    }

%>

